{
  "name": "@kaze-no-manga/brand",
  "version": "0.0.0",
  "description": "ðŸŽ¨ Design tokens and Tailwind preset for Kaze no Manga",
  "type": "module",
  "scripts": {
    "prelint": "npm run build",
    "lint": "concurrently npm:lint:* --prefixColors auto",
    "postlint": "npm run clean",
    "lint:format": "biome check --write",
    "lint:lockfile": "lockfile-lint --path package-lock.json",
    "lint:engines": "ls-engines",
    "lint:publish": "publint --strict",
    "pretest": "npm run clean",
    "test": "vitest run",
    "pretest:coverage": "npm run clean",
    "test:coverage": "vitest run --coverage",
    "posttest:coverage": "coverage-badge-readme",
    "clean": "rimraf --glob ./{lib,test}/**/*.{d.ts,js} ./vitest*.{d.ts,js}",
    "prebuild": "npm run clean",
    "build": "tsc",
    "docs:dev": "npm run storybook -w docs",
    "docs:build": "npm run build-storybook -w docs",
    "prepare": "[ \"$CI\" = \"true\" ] || [ \"$GITHUB_ACTIONS\" = \"true\" ] && echo 'Skipping husky' && exit 0 || husky"
  },
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "require": "./lib/index.js"
    },
    "./css": "./lib/css/variables.css",
    "./preset": {
      "types": "./lib/preset.d.ts",
      "import": "./lib/preset.js",
      "require": "./lib/preset.js"
    }
  },
  "files": [
    "lib",
    "assets/logo/*.png",
    "assets/square/*.png",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">= 20"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kaze-no-manga/brand.git"
  },
  "keywords": [
    "kaze-no-manga",
    "design-tokens",
    "design-system",
    "tailwind",
    "tailwindcss",
    "tailwind-preset",
    "theme",
    "colors",
    "typography",
    "manga",
    "styling"
  ],
  "author": "Zweer <n.olivieriachille@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kaze-no-manga/brand/issues"
  },
  "homepage": "https://github.com/kaze-no-manga/brand#readme",
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@tsconfig/node22": "^22.0.5",
    "@types/node": "^24.10.2",
    "@vitest/coverage-v8": "^4.0.15",
    "@zweer/coverage-badge-readme": "^1.2.2",
    "concurrently": "^9.2.1",
    "favicons": "^7.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "lockfile-lint": "^4.14.1",
    "ls-engines": "^0.9.3",
    "publint": "^0.3.15",
    "rimraf": "^6.1.2",
    "semantic-release": "^25.0.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "workspaces": [
    "docs"
  ]
}
